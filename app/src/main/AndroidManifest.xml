<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ooad.comet_tutors" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Controllers.Login.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.Login.ProfileForm"
            android:label="@string/title_activity_profile_form" >
        </activity>
        <activity
            android:name=".Controllers.Login.InformationForm"
            android:label="@string/title_activity_information_form" >
        </activity>
        <activity
            android:name=".Controllers.Login.ScheduleForm"
            android:label="@string/title_activity_schedule_form" >
        </activity>
        <activity
            android:name=".Controllers.Login.AccountForm"
            android:label="@string/title_activity_account_form" >
        </activity>
        <activity
            android:name=".Controllers.PrimarySequence.MainFlow"
            android:label="@string/title_activity_main_flow" >
        </activity>
        <activity
            android:name=".Controllers.PrimarySequence.SelectedTutor"
            android:label="@string/title_activity_selected_tutor" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
